@model SAAonlineMart.Models.Products

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.URL" class="img-fluid" alt="@Model.ProductName" style="width: 100%; height: auto;" />
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <h3>Price: R @Model.ProductPrice</h3>
            <!-- <p>Model.Details</p> -->
            <form asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>
